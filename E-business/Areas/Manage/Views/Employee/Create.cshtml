@using E_business.ViewModels;

@{
    ViewData["Title"] = "Create";
}

@model CreateEmployeeVm
<div class="container">
    <div class="card mt-5">
        <div class="card-body">
            <h4 class="card-title">Default form</h4>
            <p class="card-description">
                Basic form layout
            </p>
            <form method="post" class="forms-sample" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span  class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname"></label>
                    <input asp-for="Surname" class="form-control" />
                    <span class="text-danger" asp-validation-for="Surname"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Salary"></label>
                    <input asp-for="Salary" class="form-control" />
                    <span class="text-danger" asp-validation-for="Salary"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image"></label>
                    <input asp-for="Image" class="form-control" />
                    <span class="text-danger" asp-validation-for="Image"></span>
                </div>

                <div class="form-group">
                    <label asp-for="InstagramLink"></label>
                    <input asp-for="InstagramLink" class="form-control" />
                    <span class="text-danger" asp-validation-for="InstagramLink"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FacebookLink"></label>
                    <input asp-for="FacebookLink" class="form-control" />
                    <span class="text-danger" asp-validation-for="FacebookLink"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TwitterLink"></label>
                    <input asp-for="TwitterLink" class="form-control" />
                    <span class="text-danger" asp-validation-for="TwitterLink"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PositionId"></label>
                    <select asp-for="PositionId" asp-items="@(new SelectList(ViewBag.Positions,nameof(Position.Id),nameof(Position.Name)))"></select>
                    <span class="text-danger" asp-validation-for="PositionId"></span>
                </div>
                <div class="form-check form-check-flat form-check-primary">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input">
                        Remember me
                    </label>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
            </form>
        </div>
    </div>
</div>