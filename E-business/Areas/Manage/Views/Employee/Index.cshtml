
@{
    ViewData["Title"] = "Index";
}

@model ICollection<Employee>

<table class="table">
  <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Handle</th>
            <th scope="col">Delete</th>
            <th scope="col">Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model ?? new List<Employee>())
        {
                <tr>
                    <th scope="row">1</th>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>mdo</td>
                    <td><a asp-route-id="@item.Id" asp-action="Delete">delete</a></td>
                    <td><a asp-route-id="@item.Id" asp-action="Update">update</a></td>
                </tr>
        }


    </tbody>
</table>

